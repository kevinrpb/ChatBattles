{
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"args": ["--path", "${workspaceFolder}/godot/"],
			"cwd": "${workspaceFolder}",
			"name": "Debug ChatBattles",
			"program": "/usr/local/bin/godot",
